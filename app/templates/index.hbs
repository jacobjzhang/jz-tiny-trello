<ul>
	{{#each model as |list|}}
		{{todo-list 
			list=list 
			modalEnabled=modalEnabled
			newItem=newItem 
			selectItem='selectItem'
			createItem='createItem'}}
	{{/each}}

	{{create-todo-list newList=model createList='createList'}}

</ul>

{{#if modalEnabled}}

	{{detail-view 
		selectedItem=selectedItem
		newItem=newItem 
		toggleModal='toggleModal'
		deleteItem='deleteItem'}}

{{/if}}